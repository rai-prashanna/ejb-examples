<?xml version="1.0" ?>

<installation xmlns="urn:jboss:galleon:provisioning:3.0">
    <feature-pack location="wildfly@maven(org.jboss.universe:community-universe)#29.0.0.Final">
        <default-configs inherit="false"/>
        <packages inherit="false"/>
    </feature-pack>
    <feature-pack location="org.wildfly:wildfly-datasources-galleon-pack:5.0.0.Final">
        <default-configs inherit="false"/>
        <packages inherit="false"/>
    </feature-pack>
    <config model="standalone" name="standalone.xml">
        <layers>
            <include name="cloud-profile"/>
            <include name="jaxrs"/>
            <include name="postgresql-datasource"/>
            <exclude name="deployment-scanner"/>
        </layers>
    </config>
    <options>
        <option name="jboss-fork-embedded" value="true"/>
        <option name="optional-packages" value="passive+"/>
    </options>
</installation>